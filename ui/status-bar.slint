import { GridBox, Slider, HorizontalBox, VerticalBox } from "std-widgets.slint";
import { Slider } from "./compontents/slider.slint";
import { Button } from "./compontents/button.slint";

export component StatusBar inherits Rectangle {
    width: 240px;
    height: 280px;
    background: @linear-gradient(45deg, #9fafa6 0%, #ebe8e1 50%, #f6afaf 100%);
    property <color> fond-color: white;
    property <color> back-color: #999;
    VerticalBox {
        padding-top: 10px;
        property <physical-length> button-size: 40px;
        Rectangle {
            background: root.back-color;
            border-radius: 10px;
            HorizontalBox {
                Button {
                    height: button-size;
                    width: button-size;
                    icon: @image-url("images/icon-disable-alarm.svg");
                }
                Button {
                     height: button-size;
                     width: button-size;
                     icon: @image-url("images/icon-wifi.svg");
                 }
                 Button {
                     height: button-size;
                     width: button-size;
                     icon: @image-url("images/icon-bluetools.svg");
                 }
                 Button {
                     height: button-size;
                     width: button-size;
                     icon: @image-url("images/icon-settings.svg");
                 }
            }
        }

        Slider {
            width: 220px;
            value: 20;
            background: root.back-color;
            Image {
                x: 20px;
                width: 20px;
                source: @image-url("./images/icon-brightness.svg");
            }
        }
        Slider {
            width: 220px;
            value: 50;
            background: root.back-color;
            Image {
                x: 20px;
                width: 20px;
                source: parent.value > 0 ? @image-url("./images/icon-volume.svg") : @image-url("./images/icon-volume-disable.svg");
            }
        }
        Rectangle {
            background: root.back-color;
            border-color: gray;
            border-width: 1px;
            VerticalBox {
                padding:0;
                spacing: 0;
                HorizontalBox {
                    padding-top: 10px;
                    padding-bottom: 0;
                    Image {
                        width: 50px;
                        height: 60px;
                        source: @image-url("./images/music.jpg");
                    }
                    GridBox {
                        padding-left: 0px;
                        padding-top: 5px;
                        spacing-horizontal: 5px;
                        spacing-vertical: 15px;
                        Row {
                            Text {
                                color: root.fond-color;
                                font-size: 14px;
                                colspan: 3;
                                text: "[Golden Hour]She's got Gliter for skin";
                                overflow: elide;
                            }
                        }
                        Row {
                            property <physical-length> button-width: 40px;
                            Button {
                                background: rgba(0,0,0,0);
                                width: parent.button-width;
                                height: parent.button-width / 2;
                                font-size: 10px;
                                font-color: root.fond-color;
                                text: "◀◀";
                            }
                            Button {
                                background: rgba(0,0,0,0);
                                width: parent.button-width;
                                height: parent.button-width / 2;
                                property <bool> click: false;
                                font-size: 17px;
                                font-color: root.fond-color;
                                text: "▶";
                                clicked => {
                                    self.text = self.click ? "▶" : "| |";
                                    self.click = !self.click;
                                }
                            }
                            Button {
                                background: rgba(0,0,0,0);
                                width: parent.button-width;
                                height: parent.button-width / 2;
                                font-size: 10px;
                                font-color: root.fond-color;
                                text: "▶▶";
                            }
                        }
                    }
                }
                HorizontalBox {
                    padding-top: 5px;
                    padding-bottom: 5px;
                    spacing: 5px;
                    Text {
                        width: 18px;
                        text: "5.3";
                        font-size: 10px;
                        color: root.fond-color;
                    }
                    Slider {
                        width: 150px;
                        background: #888;
                        height: 10px;
                        value: 90;
                    }
                    Text {
                        width: 18px;
                        text: "-0.1";
                        font-size: 10px;
                        color: root.fond-color;
                    }
                }
            }
        }
    }
    @children

}